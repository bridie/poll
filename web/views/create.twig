{% extends "base.twig" %}

{% block title %}Create a poll{% endblock %}

{% block body %}

<div id="create-poll-page">

	<h1>Create your poll</h1>

	<form>
		<input class='question-input' type='text' placeholder="Add your question here">

		<p class='options-text'>Add your options</p>
		<input class='option-input last-option' type='text' placeholder="Option 1">

		<button type="submit" disabled>Start</button>
	</form>

</div>

{% endblock %}